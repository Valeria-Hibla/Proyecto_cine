@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

@if (!Model.EstaLogueado)
{
    <div class="container mt-5">

        <div class="row justify-content-center">
            <div class="col-md-6">

                <h3 class="text-center mb-4">Inicio de sesión</h3>

                <form method="POST" class="card p-4 shadow">

                    <div class="form-group mb-3">
                        <label>Usuario:</label>
                        <input onchange="keyUp(this)"
                               asp-for="@Model.Email"
                               class="form-control" />
                    </div>

                    <div class="form-group mb-3">
                        <label>Contraseña:</label>
                        <input type="password"
                               onchange="keyUp(this)"
                               asp-for="@Model.Contrasena"
                               class="form-control" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <input type="submit"
                               value="Limpiar"
                               asp-page-handler="BtClean"
                               class="btn btn-primary" 
                               style="background-color: #161E7D; border-color: #161E7D;" />

                        <input type="submit"
                               value="Entrar"
                               asp-page-handler="BtEnter"
                               class="btn btn-primary" 
                               style="background-color: #3E49AD; border-color: #3E49AD;" />
                    </div>

                </form>
            </div>
        </div>

    </div>
}
else
{
    <div class="container mt-5">
        <div class="row align-items-center">

            <!-- Texto del proyecto -->
            <div class="col-md-6 text-center text-md-start">
                <h1 class="display-4 fw-bold">Proyecto Cine</h1>
                <p class="text-muted" style="font-size: 1.1rem;">
                    Presentado por:<br>
                    <strong>Darlink Aguilar</strong><br>
                    <strong>Valeria Rivera</strong><br>
                    <strong>Valeria Hibla</strong>
                </p>

                <form method="POST">
                    <input type="submit"
                           value="Cerrar"
                           asp-page-handler="BtClose"
                           class="btn btn-dark mt-3" 
                           style="background-color: #161E7D; border-color: #161E7D;" />
                </form>
            </div>

           @*  <!-- Imagen grande a la derecha -->
            <div class="col-md-6 text-center">
                <img src="imagen.cine.sinfondo.png"
                     alt="Imagen Proyecto Cine"
                     class="img-fluid"
                     style="max-height: 280px; object-fit: contain;" />
            </div> *@
        </div>
    </div>
}
